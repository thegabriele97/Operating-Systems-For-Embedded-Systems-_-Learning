#include "ee.h"
#include "Arduino.h"
#include "HelpfulSerial.h"
#include "MyArduino.h"
#include "stdio.h"

extern HelpfulSerial *serial;

void StartupHook() {
	char buff[BUFFSIZ];

	serial->println("hook.cpp: Hello!!! I'am StartupHook and I am here!!!");

	DDRD |= (MASK(3) | MASK(7));
	PORTD &= ~(MASK(3) | MASK(7));

	sprintf(buff, "hook.cpp: DDRD=[0x%x]\tPORTD=[0x%x]", DDRD, PORTD);
	serial->println(buff);
}
