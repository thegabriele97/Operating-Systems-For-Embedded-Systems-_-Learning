#include "ee.h"
#include "Arduino.h"
#include "HelpfulSerial.h"
#include "MyArduino.h"
#include "stdio.h"

extern HelpfulSerial *serial;

void StartupHook() {
	char buff[BUFFSIZ];

	DDRD |= (MASK(3) | MASK(7));
	PORTD &= ~(MASK(3) | MASK(7));

	sprintf(buff, "DDRD=[0b%s]\tPORTD=[0b%s]", String(DDRD, BIN), String(PORTD, BIN));
	serial->formatted_println(__FILE__, "StartupHook", buff);
}
