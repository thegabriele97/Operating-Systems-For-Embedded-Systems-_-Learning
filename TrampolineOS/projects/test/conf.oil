OIL_VERSION = "2.5" : "test" ;

CPU test {    
	OS config {
		STATUS = STANDARD;
		BUILD = TRUE {
			TRAMPOLINE_BASE_PATH = "../../trampoline";
			APP_NAME = "myProject";
			APP_SRC = "code.cpp";
			APP_SRC = "task.c";
			CPPCOMPILER = "avr-g++";
			COMPILER = "avr-gcc";
			LINKER = "avr-gcc";
			ASSEMBLER = "avr-gcc";
			COPIER = "avr-objcopy";
			SYSTEM = PYTHON;

			LIBRARY = serial;
		};

		SYSTEM_CALL = TRUE;
		
		//STARTUPHOOK = TRUE;
		//ERRORHOOK = TRUE;
	};

  	APPMODE stdAppmode {};

	EVENT EVT {
	MASK = 0x1;
	};

	TASK Task1 {
		PRIORITY = 0x1;
	        AUTOSTART = FALSE;
		SCHEDULE = NON;
		ACTIVATION = 1;
		STACKSIZE = 256;
		EVENT = EVT;	
};
	
	ALARM Alarm1 {
		COUNTER = SystemCounter;
		AUTOSTART = TRUE {
			CYCLETIME = 500;
			ALARMTIME = 1;
			APPMODE = stdAppmode;
		};
		ACTION = ALARMCALLBACK {
			ALARMCALLBACKNAME = "suca";
		};
	};

};
